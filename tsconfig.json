{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "src/types/.d.ts"],
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "ESNext",
    "ignoreDeprecations": "5.0",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@api": ["api"],
      "@components": ["components"],
      "@views": ["views"],
      "@pages": ["pages"]
    },
    "allowJs": true
  },

  "references": [
    {
      "path": "./tsconfig.vite-config.json"
    }
  ]
}
